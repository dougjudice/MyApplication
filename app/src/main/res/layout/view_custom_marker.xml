<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- THIS XML DEFINES THE LAYOUT FOR EACH MARKER IMAGE THAT IS OVERLAID ON EACH POLYGON -->

    <android.support.v7.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="12dp"
        android:id="@+id/view_circle"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:background="@android:color/transparent"
        android:thicknessRatio="1.9">

        <!-- DEFINES THE CENTER IMAGE, TODO: REPLACE profile_pic WITH DYNAMIC IMAGE FROM USERS WHO ARE AT THE LOCATION -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/source_node"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>

        <!-- DEFINES LAYOUT FOR BUBBLE NEXT TO EACH MARKER IMAGE -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="6+"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle_txt_view"
                android:textColor="#000000"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>